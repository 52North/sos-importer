<assembly>
	<id>SNAPSHOT</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- <fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet> -->
		<fileSet>
			<directory>config</directory>
			<outputDirectory>config</outputDirectory>
			<excludes>
				<exclude>sensorbus</exclude>
				<exclude>spf.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>img</directory>
			<outputDirectory>img</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>log</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>licenses</directory>
			<outputDirectory>licenses</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>plugins</directory>
			<outputDirectory>plugins</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>scripts</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>*.sh</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>config/spf.properties.template</source>
			<outputDirectory>config</outputDirectory>
			<destName>spf.properties</destName>
		</file>
		<file>
			<source>scripts/spf.sh</source>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>scripts/spf_64bit.sh</source>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/java/spf-log4j.properties</source>
			<outputDirectory>config</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>gnu-gplv2.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/main/config/readme.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>
				org.n52.ifgicopter:spf-*
				</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>
				org.n52.ifgicopter:spf-*
				</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>