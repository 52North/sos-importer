<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-1p (%c{1}.java:%L) - %m %n"/>
		</layout>
	</appender>
	<appender name="RoFi" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./52n-sensorweb-sos-importer.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-1p (%c{1}.java:%L) - %m %n"/>
		</layout>
	</appender>

	<!--
	FILTER
	Level: OFF, ERROR, WARN, INFO, DEBUG
	 -->
	<logger name="org.n52.oxf">
		<level value="INFO" />
	</logger>
	<logger name="org.n52.client">
		<level value="TRACE" />
	</logger>
	<logger name="org.n52.server">
		<level value="TRACE" />
	</logger>
	<logger name="org.n52.shared">
		<level value="TRACE" />
	</logger>
	<logger name="org.n52.server.updates">
		<level value="TRACE" />
	</logger>
	<logger name="org.n52.server.oxf.util.crs">
		<level value="TRACE" />
	</logger>
	<!-- 
	EXTERNAL - LIBS
	 -->
	<logger name="org.apache.commons.httpclient">
		<level value="ERROR" />
	</logger>
	<logger name="org.n52.oxf.util.IOHelper">
		<level value="INFO" />
	</logger>
	<logger name="org.n52.oxf.serviceAdapters.sos.SOSAdapter">
		<level value="ERROR" />
	</logger>
	<logger name="com.sun.xml">
		<level value="ERROR" />
	</logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="RoFi" />
		<appender-ref ref="STDOUT" />
	</root>
</log4j:configuration>